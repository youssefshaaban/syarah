<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:contentPadding="@dimen/dimen_8dp"
    android:layout_margin="@dimen/dimen_6dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/dimen_14dp"
        android:layout_marginHorizontal="@dimen/dimen_14dp"
        android:layout_height="match_parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/dimen_67dp"
            android:layout_height="0dp"
            style="@style/customRoundedImageView"
            android:src="@drawable/ic_oil"
            android:id="@+id/image_car_service"
            app:layout_constraintBottom_toBottomOf="@id/status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/MeduimTextStyle"
            tools:text="watanya Zahraa elmaadi"
            android:id="@+id/nameCarService"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintStart_toEndOf="@id/image_car_service"
            app:layout_constraintTop_toTopOf="@id/image_car_service"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/LightTextStyle"
            android:id="@+id/distance"
            tools:text="watanya Zahraa elmaadi"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintStart_toEndOf="@id/image_car_service"
            app:layout_constraintTop_toBottomOf="@id/nameCarService"
            android:layout_marginTop="@dimen/dimen_6dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/LightTextStyle"
            android:id="@+id/status"
            android:textColor="@color/green"
            tools:text="watanya Zahraa elmaadi"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintStart_toEndOf="@id/image_car_service"
            app:layout_constraintTop_toBottomOf="@id/distance"
            android:layout_marginTop="@dimen/dimen_6dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/dimen_120dp"
            android:orientation="horizontal"
            android:background="@drawable/background_direction"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_6dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/contentDirection"
            app:layout_constraintTop_toBottomOf="@id/image_car_service"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_direction"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LightTextStyle"
                android:textColor="@color/white"
                android:text="@string/txt_directions"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dimen_6dp"
            android:background="@drawable/background_call"
            app:layout_constraintStart_toEndOf="@id/contentDirection"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_15dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:id="@+id/contentCall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_car_service"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LightTextStyle"
                android:textColor="@color/teal_200"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:text="@string/txt_call"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.cardview.widget.CardView>

</layout>