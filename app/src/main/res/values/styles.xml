<resources>

    <style name="BottomNavigation">
        <item name="itemIconTint">@color/bottom_navigation_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_tint</item>
        <item name="paddingStart">@dimen/bottom_navigation_padding</item>
        <item name="paddingEnd">@dimen/bottom_navigation_padding</item>
        <item name="android:background">#FDFDFD</item>
        <item name="itemTextAppearance">@style/BottomNavigationText</item>
    </style>

    <style name="RegularTextStyle">
        <item name="fontFamily">@font/kabret_font</item>
    </style>

    <style name="LightTextStyle">
        <item name="fontFamily">@font/rubik_light</item>
    </style>

    <style name="TextHeadLineStyle" parent="RegularTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_28sp</item>
    </style>
    <style name="NormalTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_13sp</item>
    </style>
    <style name="MeduimTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_18sp</item>
    </style>
    <style name="LargTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_20sp</item>
    </style>
    <style name="TextStyleLight" parent="LightTextStyle">
        <item name="android:textColor">@color/light_dark</item>
        <item name="android:textSize">@dimen/ts_16sp</item>
    </style>
    <style name="TextStyleAction" parent="RegularTextStyle">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">@dimen/ts_12sp</item>
    </style>
    <style name="BottomNavigationText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/kabret_font</item>
    </style>
    <style name="BaseButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/ts_16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:paddingStart">@dimen/dimen_16dp</item>
        <item name="android:paddingEnd">@dimen/dimen_16dp</item>
        <item name="fontFamily">@font/kabret_font</item>
    </style>
    <style name="customRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    <style name="PrimaryWhiteButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_white_button_rounded_corners_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <dimen name="bottom_navigation_padding">0dp</dimen>
    <!-- Splash Screen Theme (pre Android 12) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/teal_200</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/teal_200</item>
        <item name="postSplashScreenTheme">@style/Theme.Syarah</item>
    </style>

    <!-- Legacy Splash Screen Theme -->
    <style name="LegacySplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/legacy_splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>